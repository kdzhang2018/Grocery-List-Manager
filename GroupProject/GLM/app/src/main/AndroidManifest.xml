<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.seclass.glm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ListManager">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchAddItem"
            android:windowSoftInputMode="adjustResize"
            android:label="Search / Add Item"/>
        <activity android:name=".EntryManager"
            android:label="Entry List"/>
        <activity android:name=".BrowseAddItem"
            android:label="Browse / Add Item"/>
    </application>

</manifest>